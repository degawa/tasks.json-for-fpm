{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "fpm build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "fpm",
            "args": [
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "fpm test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "fpm",
            "args": [
                "test"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "fpm run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "fpm",
            "args": [
                "run"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "fpm install",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "fpm",
            "args": [
                "install",
                "--prefix",
                "./build"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "echo \"put path to executable file here\" ",
            "group": "test",
            "dependsOn": [
                "fpm install"
            ]
        }
    ]
}